<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

  <TextView
      android:id="@+id/textTipUser"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@color/colorAccent"
      android:text="@string/tip_user_info"
      android:textColor="@color/primaryTextColor"
      style="@style/AppTheme.TextViewHeader"
      />


  <TextView
      android:id="@+id/user_name"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/textTipUser"
      android:layout_margin="@dimen/text_margin"
      android:layout_toEndOf="@+id/gender"
      style="@style/AppTheme.TextViewTitle"
      />

  <TextView
      android:id="@+id/user_surname"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/user_name"
      android:layout_margin="@dimen/text_margin"
      android:layout_toEndOf="@id/gender"
      style="@style/AppTheme.TextViewTitle"
      />

  <TextView
      android:id="@+id/gender"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/textTipUser"
      android:layout_margin="@dimen/text_margin"
      android:src="@mipmap/ic_launcher"
      android:textAppearance="?attr/textAppearanceListItem"
      />

</RelativeLayout>
